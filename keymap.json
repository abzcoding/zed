[
  {
    "context": "Editor",
    "bindings": {
      "j k": ["workspace::SendKeystrokes", "escape cmd-s"],
      "g r": "editor::FindAllReferences",
      "g D": "editor::GoToDefinition",
      "g d": "editor::GoToDeclaration",
      "g a": "editor::ToggleCodeActions"
    }
  },
  {
    "context": "ProjectPanel || CollabPanel || OutlinePanel || ChatPanel || VimControl || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView",
    "bindings": {
      "shift-l": "pane::ActivateNextItem",
      "shift-h": "pane::ActivatePrevItem",
      "shift-x": "pane::CloseActiveItem"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "g a": "editor::ToggleCodeActions",
      "g shift-a": "editor::SelectAllMatches",
      "space o": "outline::Toggle",
      "g D": "editor::GoToDefinition",
      "g d": "editor::GoToDeclaration",
      "g r": "editor::FindAllReferences"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "space /": "vim::ToggleComments",
      "ctrl-n": "vim::SelectLargerSyntaxNode",
      "ctrl-shift-n": "vim::SelectSmallerSyntaxNode"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "space /": "vim::ToggleComments",
      "ctrl-n": "vim::SelectLargerSyntaxNode",
      "ctrl-shift-n": "vim::SelectSmallerSyntaxNode"
    }
  },
  {
    "context": "Workspace && !Terminal",
    "use_key_equivalents": true,
    "bindings": {
      "space r f": "task::Spawn",
      "space r l": "task::Rerun"
    }
  },
  {
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      "space g g": ["task::Spawn", { "task_name": "lazygit" }]
    }
  }
]
